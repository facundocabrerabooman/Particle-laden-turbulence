function stat=stat_velocities(vel,nu0,theta)

c=340;
fact=c/2/nu0/sin(theta/2)*32768;

data=[];
acc=[];
for j=1:length(vel.data)
    if(vel.status(j)==1)
        data=[data vel.data(j).freq*fact];
        if isfield(vel,'acc');
            acc=[acc vel.data(j).acc*fact];
        end
    end
end

stat.mean=mean(data);
stat.std=std(data);
stat.flatness=kurtosis(data);
stat.skewness=skewness(data);
stat.hist=hist(data,32);

if isfield(vel,'acc');
    stat.acc.mean=mean(acc);
    stat.std=std(data);
stat.flatness=kurtosis(data);
stat.skewness=skewness(data);
stat.hist=hist(data,32);

